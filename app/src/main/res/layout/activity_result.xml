<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@drawable/bg_resullts">

    <ImageView
        android:id="@+id/table_results"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="20"
        android:src="@drawable/table_results"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/table_results"
        app:layout_constraintEnd_toEndOf="@id/table_results"
        app:layout_constraintTop_toTopOf="@id/table_results"
        app:layout_constraintBottom_toBottomOf="@id/table_results"
        android:src="@drawable/star_results"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/star"
        app:layout_constraintEnd_toEndOf="@id/star"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintBottom_toBottomOf="@id/table_results"
        android:textSize="50sp"
        android:text="50"
        app:layout_constraintVertical_bias="0"/>

    <ImageButton
        android:id="@+id/replay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_results"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/refresh_button"
        app:layout_constraintVertical_bias="0.6"/>

</androidx.constraintlayout.widget.ConstraintLayout>